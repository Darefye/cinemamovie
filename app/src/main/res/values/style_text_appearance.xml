<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--app logo-->
    <style name="appLogo">
        <item name="android:textColor">#272727</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center|start</item>
    </style>

    <!--onboarding-->
    <style name="TitleTextFromOnboarding">
        <item name="android:textColor">#272727</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="BtmTextFromOnboarding">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#B5B5C9</item>
    </style>

    <!--category-->
    <style name="TextCategory">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#272727</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BtnCategory">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#3D3BFF</item>
    </style>

    <!-- item film\actor-->
    <style name="TitleTextFirst">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#272727</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitleTextSecond">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#838390</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitleTextThird">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#B5B5C9</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- item film description-->
    <style name="DescriptionShort">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#272727</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DescriptionFull">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#272727</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textWhite">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>




</resources>