<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.kinopoiskunofficial.bottom_navigation.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.kinopoiskunofficial.bottom_navigation.search.SearchFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.kinopoiskunofficial.bottom_navigation.profile.ProfileFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.kinopoiskunofficial.splash.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_mainOnBoardingFragment"
            app:destination="@id/mainOnBoardingFragment"
            app:popUpTo="@id/splashFragment" />
        <action
            android:id="@+id/action_splashFragment_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mainOnBoardingFragment"
        android:name="com.example.kinopoiskunofficial.onboarding.MainOnBoardingFragment"
        android:label="MainOnBoardingFragment" >
        <action
            android:id="@+id/action_mainOnBoardingFragment_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/mainOnBoardingFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>